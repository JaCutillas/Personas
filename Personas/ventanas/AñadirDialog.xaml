<Window x:Class="Personas.ventanas.AñadirDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personas.ventanas"
        mc:Ignorable="d"
        Title="AñadirDialog" Height="120" Width="250"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5,0,5,5" />
            <Setter Property="Padding"
                    Value="7,0,7,0" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBlock Margin="10,5,10,5"
                   Text="Nacionalidad"/>
        <TextBox Margin="10,0,10,5"
                 Text="{Binding Path=Nacionalidad}"/>
        <DockPanel LastChildFill="False"
                   Margin="5">
            <Button x:Name="AceptarButton"
                    DockPanel.Dock="Left"
                    Content="Aceptar"
                    IsDefault="True"
                    Click="AceptadoClick" />
            <Button Content="Cancelar"
                    IsCancel="True"
                    DockPanel.Dock="Right"/>
        </DockPanel>
    </StackPanel>
</Window>
